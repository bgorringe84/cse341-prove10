<%- include('partials/header.ejs') %>
</head>
<body>
   <%- include('partials/nav.ejs') %>

   <div class="album py-5 bg-light">
      <div class="container">
         <div class="row">
            <% cars.forEach(car=> { %>
               <div class="col-md-4">
                  <div class="card mb-4 box-shadow">
                     <div class = zoom-constraint>
                        <img src="<%= car.imgUrl %>" class="img-card-responsive" alt="<%= car.name %>">
                     </div>
                     <div class="card-body">
                        <h5 class="card-title">
                        <%= car.name %>
                        <p class="h2" id="price">$<%= car.price %></p>

                     </div>
                     <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                        <a href='/cars/<%= car._id %>' class="btn btn-sm btn-outline-secondary">Details</a>
                        <% if(isAuthenticated) { %>
                        <%- include('partials/add-to-cart.ejs', {car: car}) %>
                        <% } %>
                        </div>
                        <small class="text-muted"><%= car.number %></small>
                     </div>
                  </div>
               </div>
            <% }) %>
         </div>
      </div>
   </div>

   <%- include('partials/footer.ejs') %>
